<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:orientation="vertical" android:padding="20dp">

    <Button
        android:padding="10sp"
        android:text="Niti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNiti"/>

    <Button
        android:padding="10sp"
        android:text="Background Task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackgroundTask"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="0"
        android:max="5"
        android:progress="0"/>

    <Button
        android:padding="10sp"
        android:text="Delavec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDelavec"/>

    <Button
        android:padding="10sp"
        android:text="Števec do 100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStevecDo100"/>

    <Button
        android:padding="10sp"
        android:text="Števec start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStevecStart"/>

    <TextView
        android:id="@+id/textViewStevec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="0" />

    <Button
        android:padding="10sp"
        android:text="Števec stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStevecStop"/>

    <Button
        android:padding="10sp"
        android:text="Coroutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCoroutine"/>

</LinearLayout>